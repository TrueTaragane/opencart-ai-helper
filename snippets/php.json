{
    "OpenCart Controller": {
        "prefix": "occontroller",
        "body": [
            "<?php",
            "class Controller${1:Extension}${2:Module}${3:Example} extends Controller {",
            "\tpublic function index() {",
            "\t\t$this->load->language('${4:extension/module/example}');",
            "",
            "\t\t$this->document->setTitle($this->language->get('heading_title'));",
            "",
            "\t\t$data['heading_title'] = $this->language->get('heading_title');",
            "",
            "\t\t$data['breadcrumbs'] = [];",
            "",
            "\t\t$data['breadcrumbs'][] = [",
            "\t\t\t'text' => $this->language->get('text_home'),",
            "\t\t\t'href' => $this->url->link('common/dashboard', 'user_token=' . $this->session->data['user_token'], true)",
            "\t\t];",
            "",
            "\t\t$data['breadcrumbs'][] = [",
            "\t\t\t'text' => $this->language->get('heading_title'),",
            "\t\t\t'href' => $this->url->link('${4:extension/module/example}', 'user_token=' . $this->session->data['user_token'], true)",
            "\t\t];",
            "",
            "\t\t$data['header'] = $this->load->controller('common/header');",
            "\t\t$data['column_left'] = $this->load->controller('common/column_left');",
            "\t\t$data['footer'] = $this->load->controller('common/footer');",
            "",
            "\t\t$this->response->setOutput($this->load->view('${4:extension/module/example}', $data));",
            "\t}",
            "}"
        ],
        "description": "OpenCart Controller Template"
    },
    "OpenCart Model": {
        "prefix": "ocmodel",
        "body": [
            "<?php",
            "class Model${1:Extension}${2:Module}${3:Example} extends Model {",
            "\tpublic function getItems() {",
            "\t\t$query = $this->db->query(\"SELECT * FROM \" . DB_PREFIX . \"${4:example}\");",
            "",
            "\t\treturn $query->rows;",
            "\t}",
            "",
            "\tpublic function getItem($id) {",
            "\t\t$query = $this->db->query(\"SELECT * FROM \" . DB_PREFIX . \"${4:example} WHERE id = '\" . (int)$id . \"'\");",
            "",
            "\t\treturn $query->row;",
            "\t}",
            "",
            "\tpublic function addItem($data) {",
            "\t\t$this->db->query(\"INSERT INTO \" . DB_PREFIX . \"${4:example} SET name = '\" . $this->db->escape($data['name']) . \"'\");",
            "",
            "\t\treturn $this->db->getLastId();",
            "\t}",
            "",
            "\tpublic function updateItem($id, $data) {",
            "\t\t$this->db->query(\"UPDATE \" . DB_PREFIX . \"${4:example} SET name = '\" . $this->db->escape($data['name']) . \"' WHERE id = '\" . (int)$id . \"'\");",
            "\t}",
            "",
            "\tpublic function deleteItem($id) {",
            "\t\t$this->db->query(\"DELETE FROM \" . DB_PREFIX . \"${4:example} WHERE id = '\" . (int)$id . \"'\");",
            "\t}",
            "}"
        ],
        "description": "OpenCart Model Template"
    }
}
